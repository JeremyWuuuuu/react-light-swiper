{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["es6", "dom", "es7"],
    "module": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "lib/*": ["src/libs/*"]
    }
  },
  "include": ["./src/**/*"]
}